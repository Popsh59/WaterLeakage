<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.waterleakage">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WaterLeakage">
        <activity android:name=".AdminAssignPlumber"
            android:parentActivityName=".AdminViewLeakages"/>
        <activity android:name=".PlumberLeakageStatus"
            android:parentActivityName=".PlumberViewLeakages"/>
        <activity android:name=".PlumberViewLeakages"
            android:parentActivityName=".PlumberHomeScreen"/>
        <activity android:name=".AdminAddPlumbers"
            android:parentActivityName=".AdminHomeScreen"/>
        <activity android:name=".AdminViewLeakages"
            android:parentActivityName=".AdminHomeScreen"/>
        <activity android:name=".UserReportLeakage"
            android:parentActivityName=".UserHomeScreen"/>
        <activity android:name=".PlumberHomeScreen" />
        <activity android:name=".UserHomeScreen" />
        <activity android:name=".AdminHomeScreen" />
        <activity android:name=".OTP" />
        <activity android:name=".Register"
            android:parentActivityName=".Login"/>
        <activity android:name=".Login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>